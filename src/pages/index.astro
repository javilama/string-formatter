---
import TextFormatter from '../components/TextFormatter.jsx';
---

<html lang="es">
  <head>
    <!-- Favicon en formato ICO (clásico, compatibilidad amplia) -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />

    <!-- PNGs modernos con diferentes tamaños -->
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png" />

    <title>Formateador de texto</title>
  </head>
  <body class="bg-body-gradient text-white min-h-screen flex flex-col items-center justify-center">
    <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-4">Formateador de Texto</h1>
    <TextFormatter client:load />
  </body>
</html>
